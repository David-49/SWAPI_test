{
  "templates": [
    {
      "name": "Controller/Model",
      "files": [
        {
          "path": "./controllers",
          "name": "<%=name%>Controller.js",
          "template": "controllerTemplate"
        },
        {
          "path": "./models",
          "name": "<%=name%>Model.js",
          "template": "modelTemplate"
        }

      ],
      "variables": {
        "name": { "type": "text" },
        "collectionName": { "type": "text" }
      }
    },
    {
      "name": "Route",
      "files": [
        {
          "path": "./routes",
          "name": "<%=Name.toLowerCase()%>Routes.js",
          "template": "routeTemplate"
        }
      ],
      "variables": {
        "Name": { "type": "text" }
      }
    }
  ]
}